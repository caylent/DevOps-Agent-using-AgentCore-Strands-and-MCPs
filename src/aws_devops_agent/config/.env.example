# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_SESSION_TOKEN=your_session_token_if_using_sso

# =============================================================================
# GitHub Configuration (for GitHub MCP Server)
# =============================================================================
# Generate at: https://github.com/settings/personal-access-tokens/new
# Required scopes: repo, read:org, read:user, project
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GITHUB_ORG=dpetrocelli

# =============================================================================
# Agent Configuration
# =============================================================================
# OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic API Key (if using Claude directly)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO