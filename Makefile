# AWS DevOps Agent - Simplified Makefile
# Focus on running the application with minimal complexity

.PHONY: help run dev setup clean test

# Default target
help: ## Show this help message
	@echo "üöÄ AWS DevOps Agent - Available Commands"
	@echo "========================================"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'
	@echo ""
	@echo "üí° Quick Start: make setup && make run"

# =============================================================================
# MAIN COMMANDS (PRIORITIZED)
# =============================================================================

run: ## Run the agent (interactive mode) - MAIN COMMAND
	@echo "üöÄ Starting AWS DevOps Agent..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		echo "‚úÖ Using virtual environment: $$VIRTUAL_ENV"; \
		python main.py --mode interactive; \
	else \
		echo "‚ö†Ô∏è  No virtual environment detected. Using system Python..."; \
		python3 main.py --mode interactive; \
	fi

dev: ## Run in demo mode
	@echo "üé≠ Starting AWS DevOps Agent in demo mode..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		python main.py --mode demo; \
	else \
		python3 main.py --mode demo; \
	fi

query: ## Run a single query (usage: make query QUERY="your query")
	@if [ -z "$(QUERY)" ]; then \
		echo "‚ùå Please provide a query: make query QUERY='your query'"; \
		exit 1; \
	fi
	@echo "üîç Running query: $(QUERY)"
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		python main.py --query "$(QUERY)"; \
	else \
		python3 main.py --query "$(QUERY)"; \
	fi

# =============================================================================
# MCP SERVER MANAGEMENT
# =============================================================================

mcp-check: ## Check if MCP servers are installed
	@echo "üîå Checking AWS MCP servers..."
	@echo ""
	@if command -v uv >/dev/null 2>&1; then \
		echo "‚úÖ uv is available"; \
		echo ""; \
		echo "Checking installed MCP servers:"; \
		uv tool list 2>/dev/null | grep -E "(cost-explorer|cloudwatch|aws-pricing)" || echo "‚ùå No AWS MCP servers found"; \
	else \
		echo "‚ùå uv not available. Install with: curl -LsSf https://astral.sh/uv/install.sh \| sh"; \
	fi

mcp-install: ## Install AWS MCP servers (recommended for production)
	@echo "üîå Installing AWS MCP servers (production approach)..."
	@if command -v uv >/dev/null 2>&1; then \
		echo "Installing cost-explorer-mcp-server..."; \
		uv tool install awslabs.cost-explorer-mcp-server@latest || echo "‚ö†Ô∏è  Failed to install cost-explorer-mcp-server"; \
		echo "Installing cloudwatch-mcp-server..."; \
		uv tool install awslabs.cloudwatch-mcp-server@latest || echo "‚ö†Ô∏è  Failed to install cloudwatch-mcp-server"; \
		echo "Installing aws-pricing-mcp-server..."; \
		uv tool install awslabs.aws-pricing-mcp-server@latest || echo "‚ö†Ô∏è  Failed to install aws-pricing-mcp-server"; \
		echo ""; \
		echo "‚úÖ MCP installation completed"; \
		echo "üí° Run 'make mcp-check' to verify installation"; \
	else \
		echo "‚ùå uv not available. Install with: curl -LsSf https://astral.sh/uv/install.sh \| sh"; \
		exit 1; \
	fi

mcp-run: ## Run MCP servers directly (recommended for development)
	@echo "üöÄ Running AWS MCP servers directly (development approach)..."
	@if command -v uvx >/dev/null 2>&1; then \
		echo "Starting cost-explorer-mcp-server..."; \
		uvx awslabs.cost-explorer-mcp-server@latest & \
		echo "Starting cloudwatch-mcp-server..."; \
		uvx awslabs.cloudwatch-mcp-server@latest & \
		echo "Starting aws-pricing-mcp-server..."; \
		uvx awslabs.aws-pricing-mcp-server@latest & \
		echo ""; \
		echo "‚úÖ MCP servers started in background"; \
		echo "üí° Use 'make mcp-stop' to stop all servers"; \
	else \
		echo "‚ùå uvx not available. Install with: curl -LsSf https://astral.sh/uv/install.sh \| sh"; \
		exit 1; \
	fi

mcp-stop: ## Stop all running MCP servers
	@echo "üõë Stopping MCP servers..."
	@pkill -f "cost-explorer-mcp-server" || true
	@pkill -f "cloudwatch-mcp-server" || true
	@pkill -f "aws-pricing-mcp-server" || true
	@echo "‚úÖ MCP servers stopped"

mcp-test: ## Test MCP server connections
	@echo "üß™ Testing MCP server connections..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		python tests/test_mcp_integration.py; \
	else \
		python3 tests/test_mcp_integration.py; \
	fi

# =============================================================================
# SETUP & INSTALLATION
# =============================================================================

setup: ## Complete setup: create venv, install deps, install MCP servers
	@echo "üîß Setting up AWS DevOps Agent..."
	@echo "1Ô∏è‚É£ Creating virtual environment..."
	python3 -m venv .venv
	@echo "2Ô∏è‚É£ Installing dependencies..."
	.venv/bin/pip install --upgrade pip
	.venv/bin/pip install -r requirements.txt
	.venv/bin/pip install -r requirements_dev.txt
	@echo "3Ô∏è‚É£ Installing AWS MCP servers..."
	@if command -v uvx >/dev/null 2>&1; then \
		echo "Installing MCP servers..."; \
		uv tool install awslabs.cost-explorer-mcp-server@latest || echo "‚ö†Ô∏è  Failed to install cost-explorer-mcp-server"; \
		uv tool install awslabs.cloudwatch-mcp-server@latest || echo "‚ö†Ô∏è  Failed to install cloudwatch-mcp-server"; \
		uv tool install awslabs.aws-pricing-mcp-server@latest || echo "‚ö†Ô∏è  Failed to install aws-pricing-mcp-server"; \
		echo "‚úÖ MCP installation attempt completed"; \
	else \
		echo "‚ö†Ô∏è  uvx not available. MCP servers not installed"; \
		echo "üí° Install uvx with: curl -LsSf https://astral.sh/uv/install.sh \| sh"; \
		echo "üí° Then run: make mcp-install"; \
	fi
	@echo "‚úÖ Setup complete!"
	@echo "üí° Run 'source .venv/bin/activate' then 'make run'"

install: ## Install dependencies only (if venv exists)
	@if [ -f .venv/bin/activate ]; then \
		echo "üì¶ Installing dependencies in virtual environment..."; \
		.venv/bin/pip install --upgrade pip; \
		.venv/bin/pip install -r requirements.txt; \
		.venv/bin/pip install -r requirements_dev.txt; \
		echo "‚úÖ Dependencies installed"; \
	else \
		echo "‚ùå Virtual environment not found. Run 'make setup' first"; \
		exit 1; \
	fi

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

test: ## Run all tests
	@echo "üß™ Running tests..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		python -m pytest tests/ -v; \
	else \
		python3 -m pytest tests/ -v; \
	fi

test-terraform: ## Run Terraform tests
	@echo "üèóÔ∏è Running Terraform tests..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		python -m pytest tests/terraform/ -v; \
	else \
		python3 -m pytest tests/terraform/ -v; \
	fi

format: ## Format code
	@echo "üé® Formatting code..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		black src/ tests/ --line-length=100; \
		isort src/ tests/ --profile black; \
	else \
		black src/ tests/ --line-length=100; \
		isort src/ tests/ --profile black; \
	fi
	@echo "‚úÖ Code formatted"

# =============================================================================
# DEPLOYMENT
# =============================================================================

deploy: ## Deploy to Bedrock Agent Core
	@echo "üöÄ Deploying to Bedrock Agent Core..."
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		python deployment/bedrock/app.py; \
	else \
		python3 deployment/bedrock/app.py; \
	fi

# =============================================================================
# UTILITIES
# =============================================================================

clean: ## Clean up temporary files and virtual environment
	@echo "üßπ Cleaning up..."
	find . -type f -name "*.pyc" -delete
	find . -type d -name "__pycache__" -delete
	find . -type f -name "*.pyo" -delete
	find . -type d -name ".pytest_cache" -exec rm -rf {} +
	find . -type d -name ".mypy_cache" -exec rm -rf {} +
	rm -rf .venv/
	@echo "‚úÖ Cleanup complete"

status: ## Show project status
	@echo "üìä AWS DevOps Agent - Project Status"
	@echo "===================================="
	@echo ""
	@if [ -f .venv/bin/activate ]; then \
		echo "‚úÖ Virtual environment: .venv/"; \
	else \
		echo "‚ùå Virtual environment: Not created"; \
	fi
	@if [ -n "$$VIRTUAL_ENV" ]; then \
		echo "‚úÖ Virtual environment: Active ($$VIRTUAL_ENV)"; \
	else \
		echo "‚ö†Ô∏è  Virtual environment: Not active"; \
	fi
	@echo ""
	@echo "üîå MCP Servers:"
	@if command -v uv >/dev/null 2>&1; then \
		uv tool list 2>/dev/null | grep -E "(cost-explorer|cloudwatch|aws-pricing)" >/dev/null && echo "‚úÖ AWS MCP servers installed" || echo "‚ùå AWS MCP servers not installed"; \
	else \
		echo "‚ùå uv not available (needed for MCP servers)"; \
	fi
	@echo ""
	@echo "üèóÔ∏è  Infrastructure Tools:"
	@if command -v terraform >/dev/null 2>&1; then \
		echo "‚úÖ Terraform CLI: $(shell terraform version -json | jq -r '.terraform_version' 2>/dev/null || echo 'Available')"; \
	else \
		echo "‚ùå Terraform CLI: Not installed (optional for Terraform analysis)"; \
	fi
	@if command -v cdk >/dev/null 2>&1; then \
		echo "‚úÖ AWS CDK CLI: $(shell cdk --version 2>/dev/null || echo 'Available')"; \
	else \
		echo "‚ùå AWS CDK CLI: Not installed (optional for CDK analysis)"; \
	fi
	@echo ""
	@echo "üìÅ Project Structure:"
	@find . -type d -not -path "./.git*" -not -path "./bkp*" -not -path "./__pycache__*" | head -8
	@echo ""
	@echo "üêç Python Files: $(shell find . -name "*.py" -not -path "./bkp*" -not -path "./.git*" | wc -l | tr -d ' ')"

